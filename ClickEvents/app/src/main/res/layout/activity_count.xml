<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountActivity">

    <TextView
        android:id="@+id/activity_count_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clike the button to Increse the value"
        android:textColor="@color/colorGreen"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/activity_count_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_count_tv1"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:text="Interger : 0" />

    <Button
        android:id="@+id/activity_count_click_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>
</RelativeLayout>