<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:background="#f1f2f7"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/custom_layout_beachImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="16dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/custom_layout_topBeacheTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/custom_layout_beachImg"
            android:layout_alignEnd="@id/custom_layout_beachImg"
            android:elevation="17dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/Island"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorWhite"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/custom_layout_textLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_layout_beachImg"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/custom_layout_numberTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Number"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/custom_layout_beacheNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BeachesName"
                android:textAppearance="?android:textAppearanceSmall"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/custom_layout_beacheLocationTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BeacheLocation"
                android:textAppearance="?android:textAppearanceSmall"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_layout_textLinearLayout"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/share"
                android:textSize="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Export"
                android:textColor="@color/colorOrange"
                android:textSize="10sp"/>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>