<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="10dp"
    android:layout_margin="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/custom_layout_optionMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/icon_option_menu" />

        <ImageView
            android:id="@+id/custom_layout_imgView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@id/custom_layout_optionMenu"
            android:layout_centerHorizontal="true"
            android:src="@drawable/avtar" />

        <TextView
            android:id="@+id/custom_layout_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_layout_imgView"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_layout_nameTv"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/custom_layout_icon_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_like" />

            <ImageView
                android:id="@+id/custom_layout_icon_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_share" />

            <ImageView
                android:id="@+id/custom_layout_icon_bookmark_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_bookmark_border" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
