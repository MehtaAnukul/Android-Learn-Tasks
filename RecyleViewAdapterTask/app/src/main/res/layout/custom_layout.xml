<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/custom_layout_optionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_option_menu"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:id="@+id/custom_layout_imgView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/avtar"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/custom_layout_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@id/custom_layout_imgView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/custom_layout_icon_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_like"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/custom_layout_icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_share"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/custom_layout_icon_bookmark_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bookmark_border"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>