<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">


   <RelativeLayout
       android:id="@+id/activity_main_reletivelayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="50dp"
       android:layout_margin="40dp">

       <TextView
           android:id="@+id/activity_main_colorCodeTv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/abc"
           android:textSize="30dp"
           android:textColor="@color/colorRed"
           android:layout_centerInParent="true"/>


   </RelativeLayout>

    <SeekBar
        android:id="@+id/activity_main_seekbarRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="50"
        android:layout_centerInParent="true"/>
    <SeekBar
        android:id="@+id/activity_main_seekbarGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_centerInParent="true"
        android:layout_below="@id/activity_main_seekbarRed"
        android:layout_marginTop="20dp"/>
    <SeekBar
        android:id="@+id/activity_main_seekbarBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_centerInParent="true"
        android:layout_below="@id/activity_main_seekbarGreen"
        android:layout_marginTop="20dp"/>
    <SeekBar
        android:id="@+id/activity_main_seekbarAlpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_centerInParent="true"
        android:layout_below="@id/activity_main_seekbarBlue"
        android:layout_marginTop="20dp"/>
</RelativeLayout>