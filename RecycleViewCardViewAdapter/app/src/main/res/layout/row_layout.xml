<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/row_layout_alienwareImage"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/alienware" />

        <TextView
            android:id="@+id/row_layout_alienwareTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/row_layout_alienwareImage"
            android:text="@string/alienware"
            android:layout_margin="5dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_layout_alienwareImage"
            android:layout_alignEnd="@id/row_layout_alienwareImage"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_favorite_black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_bookmark_border" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share" />


        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
